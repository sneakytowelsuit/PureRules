---
import { getCollection } from 'astro:content';
import DocsLayout from '../../layouts/DocsLayout.astro';
const refs = (await getCollection('reference')).sort((a: any,b: any)=> (a.data.package ?? '').localeCompare(b.data.package ?? '') || a.data.title.localeCompare(b.data.title));
---
<DocsLayout title="Reference">
  <h1>Reference</h1>
  <p>API reference generated from JavaDoc comments in the source.</p>
  <ul>
    {refs.map((r: any) => (
      <li><a href={`${import.meta.env.BASE_URL}/PureRules/reference/${r.slug}/`}>{r.data.package ? `${r.data.package}.` : ''}{r.data.title}</a></li>
    ))}
  </ul>
</DocsLayout>
